<div class='site_container'>
  <div class='form'>
    <%= form_for [current_user, @window], url: user_windows_path, html: { multipart: true } do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :year_created %>
    <%= f.text_field :year_created %><br>

    <%= f.label :dedication %>
    <%= f.text_field :dedication %><br>

    <%= f.label :window_info %>
    <%= f.text_area :window_info %><br>

    <%= f.label :image %>
    <%= f.file_field :image %>

    <%= f.submit "Create A Window for your Site" %>
  <% end %>
  </div>
</div>
