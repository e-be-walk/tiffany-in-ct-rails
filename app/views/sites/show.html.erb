<div class='site_container'>
</div>
<div class='info'>
  <%= image_tag @site.image.url(:large) %>
  <h1><%= "#{@site.name}" %></h1>
  <h2><%= "#{@site.street_address}" %></h2>
  <h2><%= "#{@site.city}" %></h2>
  <h2><%= "#{@site.zip_code}" %></h2>
  <h2><%= "#{@site.contact_info}" %></h2>
  <h2><%= "#{@site.accessibility}" %></h2>
  <p><%= "#{@site.site_info}" %></p>

  <h1>Windows</h1>
    <% @site.windows.each do |window| %>
    <%= image_tag window.image.url(:medium) %>
    <% end %>

  <% if @user.site_admin? %>
  <%= link_to "Edit your site", edit_site_path(@site) %>
  <%= link_to "Delete this site", site_path(@site), :confirm => "Are you sure?", :method => :delete %>
  <%= link_to('Add a window to your site', new_site_window_path(@site)) %>
  <% end %>
</div>
