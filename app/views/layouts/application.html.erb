<!DOCTYPE html>
<html>
  <head>
    <title>Tiffany In Connecticut</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Corben|EB+Garamond" rel="stylesheet">
  </head>

  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
       <div class="container">
         <a class="navbar-brand" href="<%= root_url %>"/>Home </a>
         <a class="navbar-brand" href="<%= about_url %>"/>About </a>
         <a class="navbar-brand" href="<%= index_url %>"/>Index </a>
         <% if current_user %>
             <a class="navbar-brand" href="<%= logout_url %>"/>Log Out </a>

         <% else %>
           <a class="navbar-brand" href="<%= new_user_url %>"/>Sign Up </a>
           <a class="navbar-brand" href="<%= signin_url %>"/>Sign In </a>
          <% end %>

         </div>
    </div>
  </nav>

<header class="masthead" style="background-image: url(<%= asset_path 'tiffanybackground.jpeg' %>)">
  <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Tiffany in Connecticut</h1>
            <span class="subheading">A database for Tiffany Stained Glass</span>
          </div>
        </div>
      </div>
    </div>
</header>
   <div class="container" role="main">
     <div class="wrapper clearfix">
        <%= yield %>
      </div>
    </div>
    </div>
  </body>
</html>
